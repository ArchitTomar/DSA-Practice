class Solution {
    public int pivotIndex(int[] nums) {
        int left = 0;
        int total = 0;

        // find total sum
        for (int num : nums) {
            total += num;
        }

        // check pivot index
        for (int i = 0; i < nums.length; i++) {
            int right = total - left - nums[i];
            if (left == right) {
                return i;
            }
            left += nums[i]; // update left sum
        }
        return -1;
    }
}
